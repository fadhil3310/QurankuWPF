<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

				<Style x:Key="PrayTimeCard" TargetType="Border">
								<Setter Property="Margin" Value="32,16,32,32" />
								<!--Setter Property="Background" Value="{DynamicResource FluentBackgroundColor}" />
								<Setter Property="CornerRadius" Value="16" />
								<Setter Property="BorderThickness" Value="1" />
								<Setter Property="BorderBrush" Value="{DynamicResource FluentBorderColor}" /-->
				</Style>
				
				<Style x:Key="PrayTimeCardItem" TargetType="Grid">
								<Setter Property="Margin" Value="0,2,0,2" />
				</Style>

				<Style x:Key="PrayTimeCardItemTimeName" TargetType="TextBlock">
								<Setter Property="VerticalAlignment" Value="Center" />
								<Setter Property="Margin" Value="12,0,0,0" />
								<Setter Property="FontSize" Value="16" />
				</Style>

</ResourceDictionary>