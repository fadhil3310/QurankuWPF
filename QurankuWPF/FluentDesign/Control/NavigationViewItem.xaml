<UserControl x:Class="QurankuWPF.NavigationViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QurankuWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
				<Button x:Name="itemRoot" Style="{DynamicResource FluentNavigationViewItem}">
								<Grid>
												<Border x:Name="itemSelection" Visibility="Hidden" Style="{DynamicResource FluentNavigationViewItemSelection}">
																<Border.RenderTransform>
																				<ScaleTransform x:Name="itemSelectionScale"/>
																</Border.RenderTransform>
												</Border>
												<Path x:Name="itemIcon" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{DynamicResource FluentNavigationViewItemForeground}" />
								</Grid>
				</Button>
</UserControl>
